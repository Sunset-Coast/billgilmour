@{
    ViewData["Title"] = "Contact Us";
}
@section Header{
    <section role="banner" class="hero-banner">
        <div class="hero">

            <div class="hero-section mt-5">
                <h1 class="text-center">Get in touch</h1>


            </div>
        </div>
    </section>
}


<section class="contact-bg">
    <div class ="container contact-wrap w-50">
    <div class="row row-cols-1">
        <div class="">
            <h2>Ask A CFO</h2>
                <p>
                   Please complete this form and one of our partners will contact you.
                </p>
        </div>
        <div class="">
            <form>
           
                <div class="form-group">
                    <label for="name">First Name:</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required>
                </div>
                        <div class="form-group">
                            <label for="name">Last Name:</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" required>
                        </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                     <div class="form-group">
                            <label for="tel">Phone Number:</label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="(___)-___-____">
                    </div>
                <div class="form-group">
                            <label for="message">Have a particular challenge you're facing or just a general question?</label>
                    <textarea class="form-control" id="message" name="message" required placeholder="Have a question or a comment?"></textarea>
                </div>
                <button type="submit" class="btn mt-3 btn-lg">Submit</button>
            </form>
        </div>
        </div>
    </div>
</section>
